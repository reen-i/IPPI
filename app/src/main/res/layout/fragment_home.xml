<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    tools:context="com.comxa.nasheen.divalavida.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/guide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#DFDFDF"
            android:orientation="vertical"
            android:elevation="8dp"
            card_view:cardElevation="2sp"
            card_view:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/rellay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph1"
                android:layout_below="@id/tv1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                app:seriesColor="#00cc00"
                app:seriesType="bar" />


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Jumlah Permohonan"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/guide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#DFDFDF"
                android:layout_below="@id/guide1"
                android:elevation="20dp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph2"
                    android:layout_below="@id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    app:seriesColor="#00cc00"
                    app:seriesType="bar" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Jumlah Permohonan Setiap Kolej"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/guide3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/guide2"
                android:background="#DFDFDF"
                android:elevation="20dp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph3"
                    android:layout_below="@id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    app:seriesType="line"
                    app:seriesColor="#00cc00"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Jumlah Pemohon"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/guide4"
                android:layout_below="@id/guide3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="20dp"
                android:background="#DFDFDF"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph4"
                    android:layout_below="@id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"

                    android:layout_marginTop="30dp"
                    app:seriesColor="#00cc00"
                    app:seriesType="line" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Bidang Paling Banyak Dipohon"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/guide5"
                android:layout_below="@id/guide4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="20dp"
                android:background="#DFDFDF"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph5"
                android:layout_below="@id/tv5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:seriesColor="#00cc00"
                app:seriesType="line" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="XYZ"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>